<h3>
  <%= t('activerecord.attributes.notice_board.request') %>
</h3>


<table class="table table-bordered" id="small-display-event-table">
  <tbody>
    <tr>
        <th><%= t('activerecord.attributes.notice_board.created_at') %></th>
        <td><%= @notice_board.created_at.in_time_zone(TimeZone.find(current_user.time_zone_id).en_name).to_datetime.strftime("%Y/%m/%d (%a)") %></td>
    </tr>
    <tr>
        <th><%= t('activerecord.attributes.notice_board.user_name') %></th>
        <td><%= @notice_board.user.translated_name %></td>
    </tr>
    <tr>
        <th><%= t('activerecord.attributes.language.name') %></th>
        <td><%= @notice_board.language.translated_name %></td>
    </tr>
    <tr>
        <th><%= t('activerecord.attributes.notice_board.request_content') %></th>
        <td><%= simple_format(strip_tags(@notice_board.note)) %></td>
    </tr>
    <% if current_user.id == @notice_board.user_id %>
      <tr>
        <td colspan="2">
          <%= link_to t('activerecord.attributes.button.edit'), edit_notice_board_path(id: @notice_board.id), class:"btn btn-warning button-margin" %>
          <%= link_to t('activerecord.attributes.button.delete'), notice_board_path(id: @notice_board.id), method: :delete, 
            data: {confirm:"本当にこのリクエストを削除しますか？"}, class:"btn btn-danger button-margin" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t("activerecord.attributes.button.back"), notice_boards_path, class:"btn btn-secondary button-margin"  %>




