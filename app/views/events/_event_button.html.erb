<% if current_user.present? %>
  <div class="row">
    <div class="display_point">
      <%= "現在のポイント" %>
      <br>
      <span><%= current_user.points.count %></span>
      <span><%= "pt" %></span>
    </div> 
  </div>
  <%= link_to t('activerecord.attributes.event.all'), events_path, class:"btn btn-acuamarine button-margin" %>
  <%= link_to t('activerecord.attributes.event.joining'), joining_events_path, class:"btn btn-tomato button-margin" %>
  <%= link_to t('activerecord.attributes.event.hosting'), hosting_events_path, class:"btn btn-dark-green button-margin" %>
  <%= link_to t('activerecord.attributes.notice_board.request'), notice_boards_path, class:"btn btn-secondary button-margin" %>
<% else %>
  <%= link_to t('activerecord.attributes.event.all'), events_path, class:"btn btn-acuamarine" %>
<% end %>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  <%= t('activerecord.attributes.button.how_to_use') %>
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span class="x-position" aria-hidden="true" >&times;</span>
      </button>
      <div class="modal-body">
        <%= simple_format(t('activerecord.attributes.event.intro_to_use')) %>
      </div>
      
    </div>
  </div>
</div>
<%= I18n.l Event.last.date.in_time_zone(TimeZone.find(Event.last.user.time_zone_id).en_name) %>