<% if current_user.present? %>
  <div class="row">
    <div class="display_point">
      <%= "現在のポイント" %>
      <br>
      <span><%= current_user.points.count %></span>
      <span><%= "pt" %></span>
    </div> 
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= link_to t('activerecord.attributes.event.create'), new_event_path, class:"btn btn-info button-margin" %>
      <%= link_to t('activerecord.attributes.notice_board.create'), new_notice_board_path, class:"btn btn-warning button-margin" %>
    </div>
  </div>
  <hr>
  <%= link_to t('activerecord.attributes.event.all'), events_path, class:"btn btn-acuamarine button-margin" %>
  <%= link_to t('activerecord.attributes.event.joining'), joining_events_path, class:"btn btn-tomato button-margin" %>
  <%= link_to t('activerecord.attributes.event.hosting'), hosting_events_path, class:"btn btn-dark-green button-margin" %>
  <%= link_to t('activerecord.attributes.notice_board.request'), notice_boards_path, class:"btn btn-secondary button-margin" %>
  
<% else %>
  <%= link_to t('activerecord.attributes.event.all'), events_path(type: "public"), class:"btn btn-acuamarine" %>
<% end %>
